<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/wallpaper2"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="353dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="#BEB790ED"
        android:fontFamily="@font/kennyblock"
        android:gravity="center"
        android:text="TicTacToe"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        tools:ignore="HardcodedText,ObsoleteLayoutParam,TextSizeCheck,TextContrastCheck" />

    <ImageView
        android:id="@+id/centerImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="20dp"
        android:contentDescription="Game logo"
        android:scaleType="centerInside"
        android:src="@drawable/win"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/kennyfuture"
        android:text="Result"
        android:textColor="#F02A2A"
        android:textSize="24sp"
        tools:ignore="HardcodedText,TextContrastCheck" />

    <Button
        android:id="@+id/replayButton"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kennypixel"
        android:text="Replay"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/exit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/kennypixel"
        android:onClick="exitApp"
        tools:ignore="HardcodedText,ObsoleteLayoutParam" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/replayButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/kennypixel"
        android:text="Exit"
        tools:ignore="HardcodedText,ObsoleteLayoutParam" />

</LinearLayout>
