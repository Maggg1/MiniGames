<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper2"
    android:padding="16dp">

    <!-- Exit Button -->
    <Button
        android:id="@+id/exit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:fontFamily="@font/kennypixel"
        android:onClick="exitApp"
        android:text="Back"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="104dp"
        android:layout_marginRight="30dp"
        android:background="#BEB790ED"
        android:fontFamily="@font/kennyblock"
        android:gravity="center"
        android:text="TicTacToe"
        android:textColor="@android:color/white"
        android:textSize="38sp"
        tools:ignore="HardcodedText,TextSizeCheck,TextContrastCheck" />

    <!-- Game Board Container to hold the GridLayout and Dividers -->
    <RelativeLayout
        android:id="@+id/gameBoardContainer"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true">

        <!-- 3x3 Button Grid using GridLayout -->
        <GridLayout
            android:id="@+id/gameBoard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:rowCount="3">

            <!-- Tic-Tac-Toe Buttons -->
            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/board_button_background"
                android:fontFamily="@font/kennyblock"
                android:textSize="55sp"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/board_button_background"
                android:fontFamily="@font/kennyblock"
                android:textSize="55sp"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/board_button_background"
                android:fontFamily="@font/kennyblock"
                android:textSize="55sp"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/board_button_background"
                android:fontFamily="@font/kennyblock"
                android:textSize="55sp"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/board_button_background"
                android:fontFamily="@font/kennyblock"
                android:textSize="55sp"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/board_button_background"
                android:fontFamily="@font/kennyblock"
                android:textSize="55sp"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/board_button_background"
                android:fontFamily="@font/kennyblock"
                android:textSize="55sp"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/board_button_background"
                android:fontFamily="@font/kennyblock"
                android:textSize="55sp"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/button9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/board_button_background"
                android:fontFamily="@font/kennyblock"
                android:textSize="55sp"
                tools:ignore="SpeakableTextPresentCheck" />
        </GridLayout>

        <!-- Vertical dividers -->
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginStart="98dp"
            android:background="#000000" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginStart="198dp"
            android:background="#000000" />

        <!-- Horizontal dividers -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="98dp"
            android:background="#000000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="198dp"
            android:background="#000000" />
    </RelativeLayout>

    <!-- Pause Music Button -->
    <Button
        android:id="@+id/pauseResumeMusicButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="38dp"
        android:fontFamily="@font/kennyblock"
        android:text="Music"
        tools:ignore="HardcodedText" />

</RelativeLayout>
